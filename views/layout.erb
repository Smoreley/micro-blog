<script>
$(function() {
    
    $.post("/loggedin",(data) => {
        if(data) 
            changeSideBar("/entrance");
        else 
            changeSideBar("/profile");
    });
    
    $("#ebttn").click(() => {
        changeSideBar("/entrance");
    });
    
    $("#abttn").click(() => {
        changeSideBar("/account");
    });
    
    $("#pbttn").click(() => {
        changeSideBar("/profile");
    });
    
    $("#tbttn").click(() => {
        window.location.href='/display';
    });
    $("#fbttn").click(() => {
        window.location.href='/feed';
    });
    
    
    $("#dallbttn").click((e) => {
        e.preventDefault();
        alert("asdad");
//        changeSideBar("/delete");
        $.post("/delete_all");
        alert("someStuff "+e);
    });
});
    
    
function changeSideBar(sbar) {
    $('#sidebar').load(sbar); 
    
};
    
</script>