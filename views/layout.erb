        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="js/cookies.js"></script>
        <script src="js/main.js"></script>

        <!-- STYLE -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
        <link rel="stylesheet" href="css/main.css" />
    </head>
    
    <body>
        <div class="container-fluid" id="maincontainer">
            <div class="row">
                <div class="col-sm-8 large-bar">
                    <%= yield %>
                </div>
                
                <div class="col-sm-4 small-bar" id="sidebar">
                </div>
            </div>
        </div>
        <%= @myuserid %>
        
        <button id="ebttn">entrance</button>
        <button id="abttn">account</button>
        <button id="pbttn">profile</button>
        <button id="tbttn">tables</button>
	
    </body>
</html>

<script>
$(function() {
    changeSideBar("/entrance");
    
    $("#ebttn").click(() => {
        changeSideBar("/entrace");
    });
    
    $("#abttn").click(() => {
        changeSideBar("/account");
    });
    
    $("#pbttn").click(() => {
        changeSideBar("/profile");
    });
    $("#tbttn").click(() => {
        window.location.href='/display';
    });
    
});
    
    
function changeSideBar(sbar) {
    $('#sidebar').load(sbar); 
    
};
    
</script>